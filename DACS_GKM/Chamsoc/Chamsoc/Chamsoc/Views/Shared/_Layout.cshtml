            zaloOption.addEventListener("click", function(e) {
                e.stopPropagation();
                window.open('https://zalo.me/0522336052', '_blank');
                miniChatOptions.classList.remove('show');
                miniChatToggle.classList.remove('active');
                setTimeout(() => {
                    miniChatOptions.style.display = 'none';
                }, 300);
            });

