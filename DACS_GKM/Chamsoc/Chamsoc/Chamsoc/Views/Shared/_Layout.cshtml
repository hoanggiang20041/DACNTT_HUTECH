                    }
                } else {
                    container.style.display = 'none';
                }
                miniChatOptions.classList.remove('show');
                miniChatToggle.classList.remove('active');
                setTimeout(() => {
                    miniChatOptions.style.display = 'none';
                }, 300);
            });


            // Click outside để đóng mini chat options
            document.addEventListener('click', function(event) {
                const isClickInside = miniChatWidget.contains(event.target);
                if (!isClickInside) {
                    miniChatOptions.classList.remove('show');
                    miniChatToggle.classList.remove('active');
                    setTimeout(() => {
                        miniChatOptions.style.display = 'none';
                    }, 300);
                }
            });

            // Mouse move events
            document.addEventListener("mousemove", function (e) {
                if (isDragging) {
                    const x = e.clientX - offsetX;
                    const y = e.clientY - offsetY;

                    miniChatWidget.style.left = `${x}px`;
                    miniChatWidget.style.top = `${y}px`;
                    miniChatWidget.style.right = 'auto';
                    miniChatWidget.style.bottom = 'auto';
                }
            });

            // Touch move events for mobile
            document.addEventListener("touchmove", function (e) {
                if (isDragging) {
                    e.preventDefault();
                    const touch = e.touches[0];
                    const x = touch.clientX - offsetX;
                    const y = touch.clientY - offsetY;

                    miniChatWidget.style.left = `${x}px`;
                    miniChatWidget.style.top = `${y}px`;
                    miniChatWidget.style.right = 'auto';
                    miniChatWidget.style.bottom = 'auto';
                }
            });

            // Mouse up events
            document.addEventListener("mouseup", function (e) {
                if (isDragging) {
                    isDragging = false;
                    miniChatWidget.style.transition = "";
                }
            });

            // Touch end events for mobile
            document.addEventListener("touchend", function (e) {
                if (isDragging) {
                    isDragging = false;
                    miniChatWidget.style.transition = "";
                }
            });

            // Thêm sự kiện click outside để đóng chatbot
            document.addEventListener('click', function(event) {
                const isClickInside = container.contains(event.target) || chatbotOption.contains(event.target);
                if (!isClickInside && container.style.display === 'block') {
                    container.style.display = 'none';
                }
            });


            closeBtn.addEventListener("click", function (e) {
                e.stopPropagation();
                container.style.display = 'none';
            });

            questionInput.addEventListener("keydown", function (event) {
                if (event.key === "Enter") {
                    event.preventDefault();
                    sendChatbotQuestion();
                }
            });

            // Ngăn sự kiện click trong container lan ra ngoài
            container.addEventListener('click', function(e) {
                e.stopPropagation();
            });
        });

        async function sendChatbotQuestion() {
            const questionInput = document.getElementById('chatbot-question');
            const messagesContainer = document.getElementById('chatbot-messages');
            const question = questionInput.value.trim();
            
            if (!question) {
                messagesContainer.innerHTML += `<div class="bot-message"><strong>Bot:</strong> ❌ Vui lòng nhập nội dung câu hỏi.</div>`;
                return;
            }

            messagesContainer.innerHTML += `<div class="user-message"><strong>Bạn:</strong> ${question}</div>`;
            questionInput.value = '';

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                
                const response = await fetch('/Chatbot/Ask', {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token || ''
                    },
                    body: JSON.stringify({
                        messages: [
                            {
                                role: 'user',
                                content: question
                            }
                        ]
                    })
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const data = await response.json();
                messagesContainer.innerHTML += `<div class="bot-message"><strong>Bot:</strong> ${data.reply}</div>`;
            } catch (error) {
                console.error('Error:', error);
                messagesContainer.innerHTML += `<div class="bot-message"><strong>Bot:</strong> Xin lỗi, có lỗi xảy ra. Vui lòng thử lại sau.</div>`;
            }

            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }
    </script>
