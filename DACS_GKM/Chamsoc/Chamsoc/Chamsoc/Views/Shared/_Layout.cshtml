            let offsetX = 0;
            let offsetY = 0;
            let startX = 0;
            let startY = 0;

            // Drag functionality
            miniChatToggle.addEventListener("mousedown", function(e) {
                if (e.target === miniChatToggle || e.target.parentElement === miniChatToggle) {
                    isDragging = true;
                    offsetX = e.clientX - miniChatWidget.getBoundingClientRect().left;
                    offsetY = e.clientY - miniChatWidget.getBoundingClientRect().top;
                    startX = e.clientX;
                    startY = e.clientY;
                    miniChatWidget.style.transition = "none";
                }
            });

            // Touch events for mobile
            miniChatToggle.addEventListener("touchstart", function(e) {
                if (e.target === miniChatToggle || e.target.parentElement === miniChatToggle) {
                    isDragging = true;
                    const touch = e.touches[0];
                    offsetX = touch.clientX - miniChatWidget.getBoundingClientRect().left;
                    offsetY = touch.clientY - miniChatWidget.getBoundingClientRect().top;
                    startX = touch.clientX;
                    startY = touch.clientY;
                    miniChatWidget.style.transition = "none";
                }
            });

            // Toggle mini chat options (only if not dragging)
            miniChatToggle.addEventListener("click", function(e) {
                e.stopPropagation();
                const endX = e.clientX || (e.touches && e.touches[0].clientX);
                const endY = e.clientY || (e.touches && e.touches[0].clientY);
                const distance = Math.sqrt(Math.pow(endX - startX, 2) + Math.pow(endY - startY, 2));
                
                if (distance < 5) { // Nếu di chuyển ít hơn 5px, coi như là click
                    if (miniChatOptions.classList.contains('show')) {
                        // Đóng options
                        miniChatOptions.classList.remove('show');
                        miniChatToggle.classList.remove('active');
                        setTimeout(() => {
                            miniChatOptions.style.display = 'none';
                        }, 300);
                    } else {
                        // Mở options
                        miniChatOptions.style.display = 'block';
                        setTimeout(() => {
                            miniChatOptions.classList.add('show');
                            miniChatToggle.classList.add('active');
                            // Thêm hiệu ứng cho từng option
                            const options = miniChatOptions.querySelectorAll('.chat-option');
                            options.forEach((option, index) => {
                                setTimeout(() => {
                                    option.classList.add('show');
                                }, index * 100);
                            });
                        }, 10);
                    }
                }
            });

